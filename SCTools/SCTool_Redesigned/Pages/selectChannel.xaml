<Page x:Class="SCTool_Redesigned.Pages.selectChannel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SCTool_Redesigned.Pages"
      xmlns:lang="clr-namespace:SCTool_Redesigned.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="440" d:DesignWidth="800"
      Title="selectChannel">

    <Grid>
        <Label x:Name="PhaseNumber" Content="02" FontWeight="Bold" HorizontalAlignment="Left" Margin="50,40,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextBrush}" FontFamily="{StaticResource GmarketSansB}" FontSize="36"/>
        <Label x:Name="Phasetext" Content="한국어 패치를 설치할 스타 시티즌 버전을 선택하세요." HorizontalAlignment="Left" Margin="50,90,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextBrush}" FontFamily="{StaticResource SCDream5}" FontSize="18"/>
        <Label x:Name="PhaseDesc" Content="주의: 버전에 따라 한국어 패치가 호환되지 않을 수 있습니다." HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top" Foreground="{StaticResource MediumGreyBrush}" FontFamily="{StaticResource SCDream5}" FontSize="18"/>
        <Button x:Name="RefreshBtn" Content="새로고침" HorizontalAlignment="Right" Height="35" Margin="0,0,50,30" VerticalAlignment="Bottom" Width="89" Style="{StaticResource subBtnStyle}" FontSize="18" Click="RefreshBtn_Click"/>
        <Label x:Name="PhasePath" Content="한국어 패치를 적용할 버전을 선택 후 다음 버튼을 누르세요." Margin="50,0,0,30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="{StaticResource MediumGreyBrush}"  FontFamily="{StaticResource SCDream5}" FontSize="18" Width="606"/>
        <Grid HorizontalAlignment="Center" Height="192" Margin="0,166,0,0" VerticalAlignment="Top" Width="705">
            <ListBox x:Name="ChannelSelectListBox" SelectionChanged="ChannelSelectListBox_SelectionChanged" Background="{x:Null}" FontSize="18" FontFamily="{StaticResource SCDream5}" BorderBrush="{x:Null}" Foreground="{StaticResource TextBrush}"/>

        </Grid>
    </Grid>
</Page>
